<!DOCTYPE html>

<html>
    <head>
        <title>Survey</title>
        <meta charset='utf-8'>
    </head>
    <body>
        @{
            string localString = ViewBag.Example + " " + "Good to see you!";
        }
        <h1>@localString</h1>
        <form action="/posting" method="post">
            Name: <input type="text" name="textField"><br>
            Location: <select name="locationField">
                <option value="seattle">Seattle</option>
                <option value="dc">Washington DC</option>
                <option value="jose">San Jose</option>
            </select><br>
            Favorite Language: <select name="languageField">
                    <option value="py">Python</option>
                    <option value="php">PHP</option>
                    <option value="c">C#</option>
                </select><br>
            Comment(Optional): <textarea name="commentField"></textarea><br>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>